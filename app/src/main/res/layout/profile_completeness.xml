<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_circle"
        android:layout_width="@dimen/releative_layout_width"
        android:layout_height="@dimen/relative_layout_height"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:background="@drawable/background_parts"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_leftgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/one_step"/>

        <ImageView
            android:id="@+id/iv_centergreen"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_leftgreen"
            android:layout_toStartOf="@+id/iv_rightgreen"
            android:background="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/iv_rightgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/one_step"/>

    </RelativeLayout>

</LinearLayout>