<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_medium"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvRelationshipHistory"
                style="@style/edit_text"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableEnd="@drawable/height_dropdown"
                android:hint="@string/text_view_releationship_history"
                />

            <TextView
                style="@style/line"
                />

            <TextView
                android:id="@+id/tvEuthnicity"
                style="@style/edit_text"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableEnd="@drawable/height_dropdown"
                android:hint="@string/text_view_euthnicity"
                />

            <TextView
                style="@style/line"
                />

            <TextView
                android:id="@+id/tvReligion"
                style="@style/edit_text"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableEnd="@drawable/height_dropdown"
                android:hint="@string/text_view_religion"
                />

            <TextView
                style="@style/line"
                />

            <TextView
                android:id="@+id/tvHeight"
                style="@style/edit_text"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableEnd="@drawable/height_dropdown"
                android:hint="@string/text_view_height"
                />

            <TextView
                style="@style/line"
                />

            <TextView
                android:id="@+id/tvBodyType"
                style="@style/edit_text"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableEnd="@drawable/height_dropdown"
                android:hint="@string/text_view_body_type"
                />

            <TextView
                style="@style/line"
                />

            <TextView
                android:id="@+id/tvSmoking"
                style="@style/edit_text"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableEnd="@drawable/height_dropdown"
                android:hint="@string/text_view_smoking"
                />

            <TextView
                style="@style/line"
                />

            <TextView
                android:id="@+id/tvDrinking"
                style="@style/edit_text"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableEnd="@drawable/height_dropdown"
                android:hint="@string/text_view_Drinking"
                />

            <TextView
                style="@style/line"
                />

            <TextView
                android:id="@+id/tvOrientation"
                style="@style/edit_text"
                android:layout_marginTop="@dimen/margin_small"
                android:drawableEnd="@drawable/height_dropdown"
                android:hint="@string/text_view_orientation"
                />

            <TextView
                style="@style/line"
                />

            <Button
                android:id="@+id/btnNext"
                style="@style/primary_button"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/button_next"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>